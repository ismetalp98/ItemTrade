<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:backgroundTint="#CF6464"
    android:layout_height="100dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/contact_reciever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İsmet Alp Eren"
            android:textSize="22sp"
            android:maxLines="1"
            android:layout_toRightOf="@id/contact_photo"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/contact_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İsmet Alp Eren asdasda a aaaaaaa asasdasda"
            android:maxLines="1"
            android:maxWidth="240dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/contact_photo"
            android:layout_marginTop="15dp"
            android:layout_below="@id/contact_reciever"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="18dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>